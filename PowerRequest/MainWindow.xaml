<Window x:Class="PowerRequest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerRequest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <RadioButton x:Name="noreq" Checked="RadioButton_Checked">No special request</RadioButton>
        <RadioButton x:Name="display"  Checked="RadioButton_Checked">Keep display on</RadioButton>
        <RadioButton x:Name="system" Checked="RadioButton_Checked">Keep power on</RadioButton>
    </StackPanel>
</Window>
